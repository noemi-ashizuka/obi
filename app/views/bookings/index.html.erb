<h1>My orders</h1>

<% @bookings_as_borrower.each do |booking| %>
  <p> # <%= booking.id %>
  Date: <%= booking.start_date %>
  <%= booking.return_date %>
  Total: <%= booking.total %>
  Status: <% if !booking.approved? %>
    Pending
  <% elsif booking.approved? %>
    Approved
  <% else %>
    Rejected
  <% end %>
  </p>

