<div class="container bg-white mt-4 pt-4 pb-4">

  <div class="row">
      <div class="col-4">
        <div class="card-left py-2">
          <div class="user-pic">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 150, width: 150, crop: :fill, class: "avatar-round-large" %>
            <% else %>
              <%= image_tag 'blank_avatar.png', class: "avatar-round-large" %>
            <% end %>
          </div>
          <%= render 'pages/profile_card' %>
            <div>
              <%= link_to 'View Profile', new_listing_path, class: "btn btn-red"  %>
              <%= link_to 'Edit Profile', new_listing_path, class: "btn btn-red"  %>
            </div>
        </div>
      </div>

      <div class="col-8">
        <div class="container card-right">
          <h2>My Latest Listings</h2>
          <p>More...</p>
          <div class="row">
              <% @listings.last(3).each do |listing| %>
                <div class="col-4">
                  <%= render 'pages/listing', listing: listing %>
                </div>
              <% end %>
          </div>
            <%= link_to 'New Listing', new_listing_path, class: "btn btn-red"  %>
          </div>
          <div class="row">
            <h2>My Bookings</h2>
            <p> date </p>
            <p> order </p>
            <p> status </p>
          </div>
          <div class="row">
            <h2>My Orders</h2>
            <p> date </p>
            <p> order </p>
            <p> status </p>
          </div>
      </div>
  </div>
</div>

</div>
