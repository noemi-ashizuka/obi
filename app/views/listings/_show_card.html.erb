<div class="container" >
  <div class="row">
    <div class="col-12 col-md-6">
    <div class="kimono">
      <% if listing.photo.attached? %>
      <%= cl_image_tag @listing.photo.key, height: 250, width: 300, crop: :fill %>
      <% else %>
      <%= image_tag "singleKimono.jpg", class:"kimono-image"%>
      <% end %>
    </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="user_info">
        <h1><%= @listing.title %></h1>
        <h3><%= @listing.description %></h3>
        <h3>Â¥<%= @listing.price %></h3>
        <h3><%= @listing.category %></h3>
        <h3><%= @listing.color %></h3>
        <h3><%= @listing.average_rating %></h3>
      </div>
      <div class="text-center">
        <div class="btn">
          <%= link_to 'RequestRental', listing_path(listing), class: "btn-red" %>
          <%= link_to 'Back to Listing Result', listing_path(listing), class: "btn-gray" %>
        </div>
      </div>
    </div>
   </div>
</div>
