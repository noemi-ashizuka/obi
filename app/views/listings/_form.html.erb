<%= simple_form_for @listing do |f| %>
  <%= f.input :title %>
  <%= f.input :price, as: :currency, label: "Price per day" %>
  <%= f.input :description %>
  <%= f.input :color, collection: Listing::COLORS %>
  <%= f.input :category, collection: Listing::CATEGORIES %>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Submit', class: 'btn-red' %>
<% end %>
