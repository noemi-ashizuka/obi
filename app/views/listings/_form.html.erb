<%= simple_form_for @listing do |f| %>
  <%= f.input :title %>
  <%= f.input :price, as: :currency %>
  <%= f.input :description %>
  <%= f.input :color, collection:  ["Red", "Blue", "Orange", "Pink", "Purple", "Yellow", "Black", "Brown", "Green", "White"] %>
  <%= f.input :category, collection:["Women's", "Men's", "Kids", "Kimono", "Hakama", "Yukata", "Wedding", "Furisode", "Short Kimono"] %>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Submit', class: 'btn-red' %>
<% end %>
